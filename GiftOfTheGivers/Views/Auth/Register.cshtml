﻿@{
    ViewData["Title"] = "Register";
}

@model GiftOfTheGivers.ViewModels.RegisterViewModel

<div class="form-container register">
    <div class="image-container">
        <img src="/resources/images/gift_of_the_givers_logo.png" alt="Gift of the givers logo" class="logo" />
    </div>

    <h1>Join to make an impact!</h1>
    <p>Are you already registered? <a asp-action="Login"><span class="underline">Login here</span></a></p>

    <form asp-action="Register">
        <label for="Name">Name</label>
        <input type="text" placeholder="Enter name" required asp-for="Name" name="Name"/>

        <label for="Email">Email</label>
        <input type="email" placeholder="Enter email" required asp-for="Email" name="Email"/>

        <label for="Password">Password</label>
        <input type="password" placeholder="Enter password" required asp-for="Password" name="Password" />

        <label for="ConfirmPassword">Confirm Password</label>
        <input type="password" placeholder="Retype password" required asp-for="ConfirmPassword" name="ConfirmPassword" />

        <button type="submit">Submit</button>
    </form>
</div>