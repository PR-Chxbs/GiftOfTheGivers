@model GiftOfTheGivers.Models.Resource

@{
    ViewData["Title"] = "Report Resource";
}

<h1>Report Resource</h1>

<form asp-action="CreateResource" method="post">
    <label>Event</label>
    <select asp-for="EventID" asp-items="@(new SelectList(ViewBag.Events, "EventID", "Name"))">
        <option value="">-- Select Event --</option>
    </select>
    <span asp-validation-for="EventID"></span>

    <label>Name</label>
    <input asp-for="Name" />
    <span asp-validation-for="Name"></span>

    <label>Unit</label>
    <input asp-for="Unit" />
    <span asp-validation-for="Unit"></span>

    <label>Quantity</label>
    <input asp-for="Quantity" type="number" />
    <span asp-validation-for="Quantity"></span>

    <button type="submit">Submit Resource</button>
</form>
