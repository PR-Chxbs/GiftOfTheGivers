@model IEnumerable<GiftOfTheGivers.Models.ApplicationUser>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<div class="table-actions-container">
    <a asp-action="CreateUser" class="btn">
        <img src="/resources/icons/plus_user_icon.png" />
        <p>Create User</p>
    </a>
</div>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <!--<a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>-->
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
