@model GiftOfTheGivers.Models.Donation

@{
    ViewData["Title"] = "Edit Donation";
}

<h1>Edit Donation</h1>

<form asp-action="EditDonation" method="post">
    <input type="hidden" asp-for="DonationID" />

    <label>Donor Name</label>
    <input asp-for="DonorName" />

    <label>Amount (ZAR)</label>
    <input asp-for="Amount" type="number" step="0.01" />

    <label>Item Description</label>
    <input asp-for="ItemDescription" />

    <label>Date Received</label>
    <input asp-for="DateReceived" type="date" />

    <label>Event</label>
    <select asp-for="EventID" asp-items="@(new SelectList(ViewBag.Events, "EventID", "Name"))">
        <option value="">-- Select Event --</option>
    </select>

    <button type="submit">Save changes</button>
</form>
